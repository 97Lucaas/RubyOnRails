
<div class="banner">
  <h1>Anniversaires</h1>
</div>

<div class="container">

<table class="table table-striped table-bordered table-dark">
  <thead>
    <tr>
      <th>Pr√©nom</th>
      <th>Date de naissance</th>
      <th>Actif</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annivs.each do |anniv| %>
      <tr>
        <td><%= anniv.name %></td>
        <td><%= I18n.l(anniv.birthdate, format: :long, locale: :'fr') %></td>
        <td><%= anniv.active %></td>
        <td><div class="bouton-success"><%= link_to 'Afficher', anniv %></td></div>
        <td><div class="bouton-primary"><%= link_to 'Editer', edit_anniv_path(anniv) %></td></div>
        <td><div class="bouton-danger"><%= link_to 'Supprimer', anniv, method: :delete, data: { confirm: 'Are you sure?' } %></td></div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="alerte"><%= notice %></p>

<br>

<div class="bouton"><%= link_to 'Creer un anniversaire', new_anniv_path %></div>

</div>
